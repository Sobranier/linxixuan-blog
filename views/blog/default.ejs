<!DOCTYPE html>
<html>
    <% keywords = blog.tags; %>
    <% include ../common/head %>
        <link rel='stylesheet' href='/stylesheets/rainbow.css' />
    </head>
    <body class="pg-blog">
        <% include ../common/header-simple %>
        <div class="body cf">
            <div class="blog--large">
                <h1 class="blog__title"><%- blog.title %></h1>
                <div class="blog__content"><%- blog.content %></div>
                <div class="blog__info">
                    <p class="date"><%= blog.day %></p>
                    <p class="tags">
                    <% blog.tags.forEach(function (tag) {%>
                        <span class="tags__item"><%- tag %></span>
                    <% })%>
                    </p>
                </div>
            </div>
            <div id="disqus_thread"></div>
        </div>
        <% include ../common/footer %>
        <script type="text/javascript">  
            requirejs(["blog"]);
        </script>  
    </body>
</html>
