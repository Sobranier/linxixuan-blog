<!DOCTYPE html>
<html>
    <% include ../common/head %>
        <link rel='stylesheet' href='/stylesheets/highlight/github.css' />
        <script charset="utf-8" src="/javascripts/jquery-1.7.1.min.js"></script>
    </head>
    <body class="pg-blog">
        <header class="simple-header">
            <ul class="nav">
                <li><a href="/">首页</a></li>
                <li><a href="/history">归档</a></li>
                <li><a href="/about">关于我</a></li>
            </ul>
        </header>
        <div class="body cf">
            <div class="blog">
                <h2 class="blog__title"><%- blog.title %></h2>
                <div class="blog__content"><%- blog.content %></div>
                <div class="blog__info">
                    <p class="date"><%= blog.day %></p>
                    <p class="tags">
                    <% blog.tags.forEach(function (tag) {%>
                        <span class="tags__item"><%- tag %></span>
                    <% })%>
                    </p>
                </div>
            </div>
            <div id="disqus_thread"></div>
        </div>
        <% include ../common/footer %>
        <script type="text/javascript">  
            $(function () {
                setTimeout(function () {
                    (function() {
                        var disqus_shortname = 'linxixuan';
                        dsq = document.createElement('script');
                        dsq.type = 'text/javascript';
                        dsq.async = true;
                        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
                        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                    })();  
                }, 500);
            });
        </script>  
    </body>
</html>
