            <div class="slider slider--step13">
                <h1 class="slider__title">CSS3 Animation</h1>
                <div class="slider__content">
                    <h3>transition</h3>
                    <ul class="feature-list">
                        <li class="feature">transition-property:[all | color | background | …]</li>
                        <li class="feature">transition-timing-function:[ease | ease-in | cubic-biezer function]</li>
                        <li class="feature">transition-duration:[1s | .5s]</li>
                        <li class="featrue">transition-delay:[1s | .5s]</li>
                    </ul>
                </div>
