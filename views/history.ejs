<!DOCTYPE html>
<html>
    <% include common/head %>
    </head>
    <body class="pg-history">
        <% include common/header %>
        <div class="body cf">
            <div class="content">
                <ul class="filter cf">
                    <li class="filter__item"><a class="J-data" href="javascript:void(0);">日期</a></li>
                    <li class="filter__item"><a class="J-tag" href="javascript:void(0);">标签</a></li>
                </ul>
                <div class="blog-list cf">
                    <% blogs.forEach(function (blog) { %>
                    <% var link = '/blog?bname=' + blog.bid; %>
                    <div class="blog">
                        <h5 class="blog__title"><%- blog.title %></h5>
                        <span class="blog__summary"><%- blog.summary %></span>
                        <a href="<%= link %>" class="blog__time"><%= blog.year %>-<%= blog.day %></a>
                    </div>
                    <% }) %>
                </div>
            </div>
            <aside>
                <div class="about">
                    <a class="link" href="/">
                        <img src="<%= avatar %>" />
                    </a>
                </div>
            </aside>
        </div>
        <% include common/footer %>
    </body>
</html>
