<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body class="pg-index">
        <header>
            <h1 class="title"><a href="/"><%= title %></a></h1>
            <ul class="nav">
                <li><a href="/index">首页</a></li>
                <!-- <li><a href="/history">归档</a></li> -->
                <!-- <li><a href="/RSS">订阅</a></li> -->
                <li><a href="/about">关于我</a></li>
            </ul>
        </header>
        <div class="content">
            <div class="blog-list">
                <% blogs.forEach(function (blog) { %>
                <div class="blog">
                    <div class="blog__cont">
                        <h2><a href=""><%= blog.title %></a></h2>
                        <p class="text"><%= blog.summary %></p>
                    </div>
                    <div class="blog__info">
                        <a href="" class="time"><span><%= blog.day %><br /><%= blog.year %></span></a>
                        <a href="" class="plus"><span></span></a>
                    </div>
                    <div class="blog__tag">
                        <% for(var i = 0; i < blog.tags.length; i++) {%>
                            <a href="">
                                <%= blog.tags[i] %>
                            </a>
                        <%}%>
                    </div>
                </div>
                <% }) %>
            </div>
            <aside>
                <div class="about">
                    <a class="link" href="/">
                        <img src="<%= avatar %>" />
                    </a>
                </div>
            </aside>
        </div>
        <footer></footer>
    </body>
</html>
