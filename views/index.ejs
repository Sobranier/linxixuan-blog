<!DOCTYPE html>
<html>
    <% include common/head %>
    </head>
    <body class="pg-index">
        <% include common/header %>
        <div class="body cf">
            <div class="content">
                <div class="main blog-list">
                    <% blogs.forEach(function (blog) { %>
                    <% var link = '/blog?bname=' + blog.bid; %>
                    <div class="blog">
                        <div class="blog__cont">
                            <h2><a class="title" href="<%= link %>"><%- blog.title %></a></h2>
                            <p class="text"><%- blog.summary %></p>
                        </div>
                        <div class="blog__info">
                            时间：<a href="<%= link %>" class="time"><%= blog.year + '-' + blog.day %></a>
                        </div>
                        <div class="blog__tag">
                            标签：
                            <% for(var i = 0; i < blog.tags.length; i++) {%>
                                <a href="/history?tag=<%= blog.tags[i]%>">
                                    <%= blog.tags[i] %>
                                </a>
                            <%}%>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
        <% include common/footer %>
    </body>
</html>
