<!DOCTYPE html>
<html>
    <% include common/head %>
    </head>
    <body class="pg-blog-index">
        <% include common/header %>
        <div class="body cf">
            <div class="content">
                <div class="main blog-list">
                    <% blogs.forEach(function (blog) { %>
                    <% var link = '/blog?bname=' + blog.bid; %>
                    <div class="blog">
                        <div class="blog__cont">
                            <h2><a href="<%= link %>"><%- blog.title %></a></h2>
                            <p class="text"><%- blog.summary %></p>
                        </div>
                        <div class="blog__info">
                            <a href="<%= link %>" class="time"><span><%= blog.day %><br /><%= blog.year %></span></a>
                            <a href="<%= link %>" class="plus"><span></span></a>
                        </div>
                        <div class="blog__tag">
                            <% for(var i = 0; i < blog.tags.length; i++) {%>
                                <a href="/history?tag=<%= blog.tags[i]%>">
                                    <%= blog.tags[i] %>
                                </a>
                            <%}%>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
            <aside>
                <div class="about">
                    <a class="link" href="/">
                        <img src="<%= avatar %>" />
                    </a>
                </div>
                <iframe width="100%" height="300" class="share_self"  frameborder="0" scrolling="no" src="http://widget.weibo.com/weiboshow/index.php?language=zh_cn&width=0&height=300&fansRow=1&ptype=1&speed=300&skin=2&isTitle=0&noborder=1&isWeibo=1&isFans=0&uid=2448299880&verifier=ded7228b&colors=d6f3f7,FFFFFF,666666,CF4921,ecfbfd&dpc=1"></iframe>
            </aside>
        </div>
        <% include common/footer %>
    </body>
</html>
