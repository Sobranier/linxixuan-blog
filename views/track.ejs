<!DOCTYPE html>
<html>
    <% include common/head %>
    </head>
    <body class="pg-track">
        <% include common/header-simple %>
        <div class="content">
            <canvas id="trackChart" width=980px height=300px;></canvas>
        </div>
        <% include common/footer %>
        <script src="/javascripts/Chart.min.js"></script>
        <script type="text/javascript">
            var data = { 
                labels : [<% track.forEach(function(data) {%>
                    <%= data.time %>,
                <%})%>],
                datasets : [{
                    fillColor : "rgba(151,187,205,0.5)",
                    strokeColor : "rgba(151,187,205,1)",
                    pointColor : "rgba(151,187,205,1)",
                    pointStrokeColor : "#fff",
                    data: [
                    <% track.forEach(function(data) {%>
                        <%= data.info %>,
                    <%})%>
                    ]
                }]
            };
            var ctx = $("#trackChart").get(0).getContext("2d");
            var myNewChart = new Chart(ctx);
            myNewChart.Line(data);
        </script>
    </body>
</html>
